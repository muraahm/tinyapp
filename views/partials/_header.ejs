<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/register">Register</a>
        <% if (username) { %>
          <form class="form-inline" action="/logout" method="POST"> <!--action = going to, POST = type of request were going to send-->
             Logged in as: <%= username %> 
             <button type="submit" class="btn btn-primary">Logout</button>
          </form>
          <% } else { %>
          <form class="form-inline" action="/login" method="POST"> <!--action = going to, POST = type of request were going to send-->
          <input class="form-control" type="text" name="username" placeholder="username" style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>